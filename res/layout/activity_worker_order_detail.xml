<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="工单详情"
        android:gravity="center"
        android:textSize="30sp" />
    
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:stretchColumns="0,2">
        
        <TableRow
            android:layout_height="wrap_content">
            <TextView 
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/workOrderId"
                android:textSize="@dimen/work_order_detail"/>
            <TextView 
                android:layout_height="wrap_content"
                android:text="@string/:"
                android:textSize="@dimen/work_order_detail"
                android:layout_marginRight="5dp" />
            <TextView 
                android:id="@+id/workOrderId"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="001"
                android:textSize="@dimen/work_order_detail" />
        </TableRow>
        
        <TableRow
            android:layout_height="wrap_content">
            <TextView 
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/workOrderState"
                android:textSize="@dimen/work_order_detail" />
            <TextView 
                android:layout_height="wrap_content"
                android:text="@string/:"
                android:layout_marginRight="5dp"
                android:textSize="@dimen/work_order_detail" />
            <TextView 
                android:id="@+id/workOrderState"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="未接单"
                android:textSize="@dimen/work_order_detail" />
        </TableRow>
        
        <TableRow
            android:layout_height="wrap_content">
            <TextView 
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/workOrderState"
                android:textSize="@dimen/work_order_detail" />
            <TextView 
                android:layout_height="wrap_content"
                android:text="@string/:"
                android:layout_marginRight="5dp"
                android:textSize="@dimen/work_order_detail" />
            <TextView 
                android:id="@+id/elevatorId"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="xxx"
                android:textSize="@dimen/work_order_detail" />
        </TableRow>
    </TableLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button 
            android:id="@+id/btn_queryElevatorRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查询电梯档案" />
        <Button 
            android:id="@+id/btn_receiveOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接单" />
        <Button 
            android:id="@+id/btn_cancelReceiveOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消接单"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
