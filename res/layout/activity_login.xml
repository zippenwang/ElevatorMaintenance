<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#AFEEEE"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="40dp">  
	
	<TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/userLogin"
        android:textSize="28sp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"/>
   
    <wzp.project.android.elvtmtn.util.ClearAllEditText 
	    android:id="@+id/caedt_username"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:selectAllOnFocus="true"
	    android:paddingLeft="10dp"
	    android:paddingRight="10dp"
	    android:hint="请输入用户名..."
	    android:drawableRight="@drawable/delete_all"
	    android:background="@drawable/username_edit_bg" />
    	
	<ImageView
        android:id="@+id/iv_spiltLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/spilt_line" />
	    
	<wzp.project.android.elvtmtn.util.ClearAllEditText 
	    android:id="@+id/caedt_password"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:paddingLeft="10dp"
	    android:paddingRight="10dp"
	    android:hint="请输入密码"
	    android:inputType="textPassword"
	    android:drawableRight="@drawable/delete_all"
	    android:background="@drawable/password_edit_bg"/>
    
    <CheckBox 
        android:id="@+id/cb_isRemember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="记住用户名"/>
    
    <CheckBox 
        android:id="@+id/cb_isAutoLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="自动登录"/>
    
    <Button 
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_btn_bg"
        android:text="登录"/>

</LinearLayout>


